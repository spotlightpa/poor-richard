{{ printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\" ?>" | safeHTML }}
<rss
  version="2.0"
  xmlns:atom="http://www.w3.org/2005/Atom"
  xmlns:media="http://search.yahoo.com/mrss/"
>
  <channel>
    <title>
      {{- .Site.Title }}{{ with .Title }}: {{.}}{{ end -}}
    </title>
    <link>{{ .Permalink }}</link>
    <description>{{ .Description }}</description>
    <generator>Hugo -- gohugo.io</generator>
    {{ with .Site.LanguageCode }}<language>{{.}}</language>{{end}}
    <managingEditor>newsroom@spotlightpa.org</managingEditor>
    <webMaster>webmaster@spotlightpa.org</webMaster>
    <copyright>{{ now.Format "2006"}}</copyright>
    {{ if not .Date.IsZero -}}
      <lastBuildDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</lastBuildDate>
    {{- end }}
    {{ with .OutputFormats.Get "RSS" -}}
        {{ printf "<atom:link href=%q rel=\"self\" type=%q />" .Permalink .MediaType | safeHTML }}
    {{- end }}
    {{ range .Pages }}
      <item>
        <title>{{ .Title }}</title>
        <link>{{ .Permalink }}</link>
        <pubDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</pubDate>
        {{- $byline := "" -}}
        {{- with .Param "authors" -}}
           {{- $byline = delimit . ", " " and " -}}
        {{- end -}}
        {{- with .Param "byline" }}{{ $byline = . }}{{ end }}
        {{ with $byline }}<author>{{.}}</author>{{end}}
        <guid>{{ .Permalink }}</guid>
        <description>
          {{ partial "hero-image-block.html" . | html }}
          {{ .Content | html }}
        </description>
        {{ $imgName := .Param "hero-image" }}
        {{ $imgCredit := .Param "hero-image-credit" }}
        {{ $imgDescription := .Param "hero-image-description" }}

        {{ $img := resources.GetMatch $imgName }}
        {{ if $img }}
          {{ $imgShrunk :=  $img.Fill "1000x1000" }}
          <media:content
            url="{{ $imgShrunk.Permalink }}"
            type="{{ $imgShrunk.MediaType }}"
            expression="full"
            width="{{ $imgShrunk.Width }}"
            height="{{ $imgShrunk.Height }}"
          >
            <media:description type="plain">{{ $imgDescription }}</media:description>
            <media:credit role="photographer" scheme="urn:ebu">{{ $imgCredit }}</media:credit>
          </media:content>
        {{ end }}
      </item>
    {{ end }}
  </channel>
</rss>
