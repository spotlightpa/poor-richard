{
  "name": "poor-richard",
  "version": "0.0.1",
  "description": "Static website for Spotlight PA",
  "repository": "git@github.com:spotlightpa/poor-richard.git",
  "author": "Spotlight PA",
  "license": "MIT",
  "scripts": {
    "checkformat": "prettier --ignore-path .gitignore --check **/*.{scss,js,yml}",
    "format": "prettier --ignore-path .gitignore --write **/*.{scss,js,yml}",
    "git-pre-push": "yarn run checkformat",
    "build": "parcel build assets/js/main.js && hugo version && hugo --debug --minify --environment staging --baseURL ${DEPLOY_PRIME_URL:-https://www.spotlightpa.org}",
    "start": "parcel assets/js/main.js & hugo server & wait"
  },
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^1.2.0",
    "@zeit/git-hooks": "^0.1.4",
    "autoprefixer": "^9.5.1",
    "bulma": "^0.7.5",
    "parcel-bundler": "^1.12.3",
    "postcss-cli": "^6.1.2",
    "prettier": "^1.17.1"
  }
}
