{
  "name": "poor-richard",
  "version": "0.0.1",
  "description": "Static website for Spotlight PA",
  "repository": "git@github.com:spotlightpa/poor-richard.git",
  "author": "Spotlight PA",
  "license": "MIT",
  "scripts": {
    "format": "yarn run format:eslint; yarn run format:prettier",
    "format:eslint": "eslint --fix --ext .js,.vue --ignore-path .gitignore .",
    "format:prettier": "prettier --ignore-path .gitignore --write **/**/*.{scss,js,yml}",
    "build:go": "./build-go.sh",
    "build:stage": "yarn run build:go && hugo version && hugo --minify --environment staging --baseURL ${DEPLOY_PRIME_URL:-https://www.spotlightpa.org}",
    "build:prod": "yarn run build:go && hugo version && hugo --cleanDestinationDir",
    "start:api": "go run ./cmd/spotlightpa-api",
    "start:noreload": "yarn start:api & hugo server --disableLiveReload & wait",
    "start:full": "yarn start:api & hugo server --disableFastRender & wait",
    "start": "yarn start:api & hugo server & wait",
    "test": "yarn run test:eslint && yarn run test:prettier",
    "test:eslint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "test:prettier": "prettier --ignore-path .gitignore --check **/**/*.{scss,js,yml}"
  },
  "dependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@fortawesome/fontawesome-free": "^5.15.1",
    "@fortawesome/fontawesome-svg-core": "^1.2.32",
    "@fortawesome/free-regular-svg-icons": "^5.15.1",
    "@fortawesome/free-solid-svg-icons": "^5.15.1",
    "@fullhuman/postcss-purgecss": "^3.0.0",
    "@newswire/frames": "^0.3.1",
    "alpinejs": "^2.7.0",
    "autoprefixer": "^10.0.1",
    "bulma": "^0.9.1",
    "eslint-plugin-vue": "^7.0.1",
    "ga-lite": "^2.1.0",
    "journalize": "^2.4.0",
    "postcss": "^8.1.1",
    "postcss-cli": "^8.0.0",
    "tailwindcss": "^1.8.10"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-config-standard": "14.1.1",
    "eslint-plugin-import": ">=2.22.1",
    "eslint-plugin-node": ">=7.0.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": ">=4.0.1",
    "eslint-plugin-standard": ">=4.0.0",
    "prettier": "^2.1.2"
  }
}
