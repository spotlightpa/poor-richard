{
  "name": "poor-richard",
  "version": "0.0.1",
  "description": "Static website for Spotlight PA",
  "repository": "git@github.com:spotlightpa/poor-richard.git",
  "author": "Spotlight PA",
  "license": "MIT",
  "scripts": {
    "format": "yarn run format:eslint; yarn run format:prettier",
    "format:eslint": "eslint --fix --ext .js,.vue --ignore-path .gitignore .",
    "format:prettier": "prettier --ignore-path .gitignore --write **/**/*.{scss,js,yml,vue}",
    "git-pre-push": "yarn run test && echo",
    "build:parcel": "parcel build src/entrypoints/* --experimental-scope-hoisting",
    "build:stage": "yarn run build:parcel && hugo version && hugo --minify --environment staging --baseURL ${DEPLOY_PRIME_URL:-https://www.spotlightpa.org}",
    "build:prod": "yarn run build:parcel && hugo version && hugo",
    "start:noreload": "parcel src/entrypoints/* & hugo server --disableLiveReload & wait",
    "start:full": "parcel src/entrypoints/* & hugo server --disableFastRender & wait",
    "start": "parcel src/entrypoints/* & hugo server & wait",
    "test": "yarn run test:eslint && yarn run test:prettier",
    "test:eslint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "test:prettier": "prettier --ignore-path .gitignore --check **/**/*.{scss,js,yml,vue}"
  },
  "dependencies": {
    "@babel/core": "^7.8.7",
    "@babel/preset-env": "^7.8.7",
    "@fortawesome/fontawesome-free": "^5.12.1",
    "@fortawesome/fontawesome-svg-core": "^1.2.27",
    "@fortawesome/free-regular-svg-icons": "^5.12.1",
    "@fortawesome/free-solid-svg-icons": "^5.12.1",
    "@fortawesome/vue-fontawesome": "^0.1.7",
    "@fullhuman/postcss-purgecss": "^2.1.0",
    "@newswire/frames": "^0.3.1",
    "@vue/component-compiler-utils": "^3.0.0",
    "alpinejs": "^2.2.1",
    "autoprefixer": "^9.5.1",
    "bulma": "^0.8.0",
    "parcel-bundler": "^1.12.4",
    "postcss-cli": "^7.1.0",
    "vue": "^2.6.10",
    "vue-template-compiler": "^2.6.10"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-standard": "14.1.0",
    "eslint-plugin-import": ">=2.20.1",
    "eslint-plugin-node": ">=7.0.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": ">=4.0.1",
    "eslint-plugin-standard": ">=4.0.0",
    "eslint-plugin-vue": "^6.2.2",
    "prettier": "^2.0.1",
    "vue-hot-reload-api": "^2.3.4"
  }
}
