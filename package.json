{
  "name": "poor-richard",
  "version": "0.0.1",
  "description": "Static website for Spotlight PA",
  "repository": "git@github.com:spotlightpa/poor-richard.git",
  "author": "Spotlight PA",
  "license": "MIT",
  "scripts": {
    "format": "yarn run format:eslint; yarn run format:prettier",
    "format:eslint": "eslint --fix --ext .js,.vue --ignore-path .gitignore .",
    "format:prettier": "prettier --ignore-path .gitignore --write **/**/*.{scss,js,yml}",
    "build:stage": "hugo version && hugo --minify --environment staging --baseURL ${DEPLOY_PRIME_URL:-https://www.spotlightpa.org}",
    "build:prod": "hugo version && hugo --cleanDestinationDir",
    "start:noreload": "hugo server -p 39019 --disableLiveReload",
    "start:full": "hugo server -p 39019 --disableFastRender",
    "start": "hugo server -p 39019",
    "test": "yarn run test:eslint && yarn run test:prettier",
    "test:eslint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "test:prettier": "prettier --ignore-path .gitignore --check **/**/*.{scss,js,yml}"
  },
  "dependencies": {
    "@babel/cli": "^7.12.8",
    "@babel/core": "^7.12.9",
    "@babel/preset-env": "^7.12.7",
    "@fortawesome/fontawesome-free": "^5.15.1",
    "@fortawesome/fontawesome-svg-core": "^1.2.32",
    "@fortawesome/free-regular-svg-icons": "^5.15.1",
    "@fortawesome/free-solid-svg-icons": "^5.15.1",
    "@fullhuman/postcss-purgecss": "^3.0.0",
    "@newswire/frames": "^0.3.1",
    "alpinejs": "^2.7.3",
    "autoprefixer": "^10.0.4",
    "bulma": "^0.9.1",
    "ga-lite": "^2.1.0",
    "journalize": "^2.5.0",
    "postcss": "^8.1.13",
    "postcss-cli": "^8.3.0",
    "tailwindcss": "^2.0.1"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-config-standard": "16.0.2",
    "eslint-plugin-import": ">=2.22.1",
    "eslint-plugin-node": ">=7.0.0",
    "eslint-plugin-prettier": "^3.2.0",
    "eslint-plugin-promise": ">=4.0.1",
    "eslint-plugin-standard": ">=5.0.0",
    "eslint-plugin-vue": "^7.1.0",
    "prettier": "^2.2.1"
  }
}
